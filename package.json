{
  "name": "root",
  "private": true,
  "scripts": {
    "build": "lerna run build --scope @atweel/primitives",
    "rebuild": "lerna run rebuild --scope @atweel/primitives",
    "pack": "lerna exec --scope @atweel/primitives -- yarn pack",
    "test": "lerna run test --scope @atweel/primitives",
    "test:integration": "/bin/bash ./scripts/run_integration_test.sh",
    "lint": "eslint --ext .ts .",
    "integrate": "yarn lint && yarn rebuild && yarn test && yarn test:integration"
  },
  "workspaces": [
    "package",
    "tests/**"
  ],
  "devDependencies": {
    "@types/chai": "^4.2.11",
    "@types/mocha": "^7.0.2",
    "@typescript-eslint/eslint-plugin": "^2.25.0",
    "@typescript-eslint/parser": "^2.25.0",
    "chai": "^4.2.0",
    "eslint": "^6.8.0",
    "husky": "^4.2.3",
    "lerna": "^3.20.2",
    "typescript": "^3.8.3"
  }
}
